// Place your settings in this file to overwrite default and user settings.

{
    "python.formatting.blackArgs": ["--line-length", "88"],
    "python.jediEnabled": false,
    "python.testing.nosetestsEnabled": true,
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#414141",
        "editor.wordHighlightBackground": "#040485",
        "editor.selectionHighlightBorder": "#ffffff2f",
        "editor.selectionHighlightBackground": "#3a3a3a", // white hex code
        "editor.findMatchBackground": "#b8cc00a8", //Current SEARCH MATCH
        "editor.findMatchHighlightBackground": "#ff7b005b" //Other SEARCH MATCHES        
    },
    "python.sortImports.args": [
        "--settings-path=${workspaceFolder}/isort.cfg"
    ],    
    "python.envFile": "${workspaceFolder}/.env",
    "tabnine.disable_line_regex": ["# "],
    "editor.rulers": [80,120],
    "python.autoComplete.extraPaths": ["${workspaceFolder}/lib", "${workspaceFolder}/src/venv/lib/python3.7"],
        "python.analysis.disabled": [
            "false"
        ],
        "files.exclude": {
            "**/.DS_Store": true,
            "**/.git": true,
            "**/*.pyc": true,
            "**/node_modules": true,
            "node_modules": true
        },
    "search.exclude": {
        "**/.git": true,         // this is a default value
        "**/.DS_Store": true,    // this is a default value

        "**/node_modules": true, // this excludes all folders 
                                 // named "node_modules" from 
                                 // the explore tree

        // alternative version
        "node_modules": true    // this excludes the folder 
                                // only from the root of
                                // your workspace 
    },
    "window.zoomLevel": 0,
    "jshint.packageManager": "yarn",
    "jshint.options": {
        "esversion": 6
    },
    "eslint.alwaysShowStatus": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "flow",
            "autoFix": true
        }
    ],
    "files.autoSave": "onFocusChange",
    "flow.pathToFlow": "${workspaceFolder}/node_modules/flow-bin/vendor/flow",
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.iconTheme": "Monokai Pro (Filter Spectrum) Icons",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "debug.allowBreakpointsEverywhere": true,
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.fileHistory.location": "explorer",
    "gitlens.views.lineHistory.location": "explorer",
    "gitlens.views.compare.location": "gitlens",
    "gitlens.views.search.location": "gitlens",
    "gitlens.hovers.annotations.changes": false,
    "gitlens.hovers.annotations.enabled": false,
    "gitlens.hovers.enabled": false,
    "python.autoComplete.addBrackets": true,
    "python.condaPath": "/usr/local/anaconda3/bin/conda",
    "window.title": "${activeEditorMedium}${separator}${rootName}${dirty}",
    "breadcrumbs.enabled": true,
    "workbench.settings.openDefaultKeybindings": true,
    "files.trimFinalNewlines": true,
    "[yaml]": {
        
    },
    "files.associations": {
        "*.yaml": "yaml"
    },
    "liveServer.settings.donotShowInfoMsg": true,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": true
    },
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "python.testing.unittestEnabled": true,
    "python.testing.unittestArgs": ["-v","-p", "*test*.py","-s", "./tests"],
    "python.testing.cwd": "${workspaceFolder}",
    "python.testing.pytestEnabled": true,
    "python.testing.pytestPath": "pytest",
    // "python.testing.pytestArgs": true,
    "search.location": "sidebar",
    "explorer.confirmDelete": false,
    "editor.renderWhitespace": "selection",
    "gitlens.keymap": "alternate",
    "workbench.colorTheme": "Pitch Black",
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "explorer.confirmDragAndDrop": false,
    "editor.lineNumbers": "off",
    "git.confirmSync": false,
    "python.sortImports.path": "/usr/local/anaconda3/envs/razor-nlp/bin/isort",
    "python.dataScience.askForKernelRestart": false,
    "editor.cursorSurroundingLines": 3,
    "python.analysis.diagnosticPublishDelay": 300,
    "python.analysis.logLevel": "Warning",
    "python.analysis.memory.keepLibraryAst": true,
    "python.analysis.memory.keepLibraryLocalVariables": true,
    "python.analysis.openFilesOnly": false,
    "terminal.explorerKind": "external",
    "workbench.editor.highlightModifiedTabs": true,
    "prettier.useTabs": true,
    "editor.tabCompletion": "on",
    "emmet.triggerExpansionOnTab": true,
    "editor.cursorStyle": "block",
    "editor.wordWrapColumn": 88,
    "editor.accessibilitySupport": "off",
    "editor.folding": false,
    "editor.gotoLocation.multiple": "gotoAndPeek",
    "editor.parameterHints.cycle": true,
    "editor.renderControlCharacters": true,
    "editor.scrollBeyondLastLine": false,
    "editor.smoothScrolling": true,
    "editor.minimap.enabled": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.quickSuggestionsDelay": 100,
    "editor.suggest.localityBonus": true,
    "editor.suggest.maxVisibleSuggestions": 8,
    "editor.suggest.shareSuggestSelections": true,
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    "git.alwaysShowStagedChangesResourceGroup": true,
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": true,
    "gitlens.codeLens.includeSingleLineSymbols": true,
    "gitlens.blame.ignoreWhitespace": true,
    "csharp.testsCodeLens.enabled": false,
    "search.quickOpen.includeSymbols": true,
    "editor.formatOnSave": true,
    "python.formatting.provider": "black",
    "csv-preview.capitalizeHeaders": false,
    "csv-preview.formatValues": "never"
}
